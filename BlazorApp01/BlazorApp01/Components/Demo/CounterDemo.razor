@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-info" @onclick="IncrementCount">Click me</button>

<button class="btn btn-danger" @onclick="() => CurrentCounterValueChanged.InvokeAsync(currentCount)">Update</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementValue { get; set; }

    [Parameter]
    public EventCallback<int> CurrentCounterValueChanged { get; set; }

    private void IncrementCount()
    {
        currentCount+=IncrementValue;
    }

}
